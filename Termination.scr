module Termination;

global protocol Termination(role Main, role Interface1, role Interface2, role Thread) {

       shutdownRequest() from Main to Interface1;	
       
       rec t {
         isShutdouwnRequested() from Thread to Interface2;
         choice at Interface2 {
           false() from Interface2 to Thread;
	   continue t;
         } or {
           true() from Interface2 to Thread;
         }
       }
       
}